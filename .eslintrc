{
  "env": {
    // I write for browser
    "browser": true,
    // in CommonJS
    "node": true,
    "es6" : true
  },
  plugins: ["vue"],
  // To give you an idea how to override rule options:
  "rules": {
    "vue/jsx-uses-vars": 2,
    // Tons of rules you can use, for example...
    "quotes": [0, "double"]
  },
  "parserOptions": {
    "sourceType": "module"
  }
}